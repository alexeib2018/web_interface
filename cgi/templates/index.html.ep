		    			<td style="width:20%">{{ item.qte }}</td>
		    			<td style="width:10%; text-align:right">
					    	<button type="button"
					    			@click.stop='delete_item(day,row.location,item.id)'
					    	        class="btn btn-danger btn-sm">Delete</button>
		    			</td>
		    		</tr>
