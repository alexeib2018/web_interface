<!doctype html>
% layout 'default';
% title 'Web interface';


<div v-if="active==0">
  <ul>
  	<li v-for="row in table">
	  <b>{{ row.day }}</b>
  	  <button type="button" class="btn btn-success btn-sm">New Item</button>
  	  <button type="button" class="btn btn-warning btn-sm">Pause</button>
	  <table class="table table-striped table-sm">
		<tbody>
		  <tr v-for="item in row.row">
		    <td style="width: 25%">{{ item.item }}</td>
		    <td style="width: 25%">{{ item.qte }}</td>
		    <td style="width: 25%">{{ item.location }}</td>
		    <td style="width: 25%">
		    	<button type="button" class="btn btn-warning btn-sm">Copy</button>
		    	<button type="button" class="btn btn-danger btn-sm">Delete</button>
		    </td>
		  </tr>
		</tbody>
	  </table>
  	</li>
  </ul>
</div>

<div v-if="active==1">
  <ul>
  	<li v-for="row in table">
	  <b>{{ row.location }}</b>
  	  <button type="button" class="btn btn-success btn-sm">New Item</button>
  	  <button type="button" class="btn btn-warning btn-sm">Pause</button>
	  <table class="table table-striped table-sm">
		<tbody>
		  <tr v-for="item in row.row">
		    <td style="width: 25%">{{ item.item }}</td>
		    <td style="width: 25%">{{ item.qte }}</td>
		    <td style="width: 25%">{{ item.day }}</td>
		    <td style="width: 25%">
		    	<button type="button" class="btn btn-warning btn-sm">Copy</button>
		    	<button type="button" class="btn btn-danger btn-sm">Delete</button>
		    </td>
		  </tr>
		</tbody>
	  </table>
  	</li>
  </ul>
</div>

<div v-if="active==2">
  <table class="table table-striped table-sm">
    <tbody>
      <tr v-for="location in locations">
        <td>
        	{{ location }}
        </td>
        <td>
        	<button type="button" class="btn btn-danger btn-sm">Delete</button>
        </td>
      </tr>
    </tbody>
  </table>
  <button type="button" class="btn btn-success">New Location</button>
</div>
